  <script type="text/javascript" language="javascript">

    $("document").ready(function(){

      //demo5
      $("div#demo5").jContent({orientation: 'vertical',
        easing: "easeOutCirc",
        duration: 500,
        auto: true,
        pause_on_hover: true,
        direction: 'next',
        pause: 1500});

     
    });

    function setId(id){
      $("#doc_id").val(id);
        $.ajax({
          url: "documents/"+id+"/keywords"
       })
       .done(function( data ) {
         alert(data);
       });
    }
  </script>
