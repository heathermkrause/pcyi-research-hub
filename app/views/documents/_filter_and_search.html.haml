- if request.path.eql?(documents_path) || request.path.eql?(root_path)

  = form_tag({controller: "documents", action: "index"}, method: "get", class: "navbar-form navbar-right", input_html: {role: "search"}) do
    .form-group
      = text_field_tag :search, params[:search], class: "form-control", placeholder: "Full text search"
    = submit_tag "Search", class: 'btn btn-default'

  = form_tag({controller: "documents", action: "index"}, method: "get", class: "navbar-form navbar-right") do
    .form-group

      = label_tag('Select age range')
      - params[:age_range].present? ? selected_age_range = params[:age_range] : selected_age_range = 'All ages'
      = select_tag(:age_range, options_for_select([[ENV['AGE_RANGE_1'], ENV['AGE_RANGE_1']], [ENV['AGE_RANGE_2'], ENV['AGE_RANGE_2']], [ENV['AGE_RANGE_3'], ENV['AGE_RANGE_3']], ["All ages (0-24 years)", "All ages"]], selected: selected_age_range), class: "form-control")

      and
      = label_tag('report type')
      - params[:report_type].present? ? selected_report_type = params[:report_type] : selected_report_type = 'Any report type'
      = select_tag(:report_type, options_for_select([[ENV['REPORT_TYPE_1'], ENV['REPORT_TYPE_1']], [ENV['REPORT_TYPE_2'], ENV['REPORT_TYPE_2']], [ENV['REPORT_TYPE_3'], ENV['REPORT_TYPE_3']], [ENV['REPORT_TYPE_4'], ENV['REPORT_TYPE_4']], [ENV['REPORT_TYPE_5'], ENV['REPORT_TYPE_5']], ["Any report type", "Any report type"]], selected: selected_report_type), class: "form-control")

    = submit_tag "Filter", class: 'btn btn-default'